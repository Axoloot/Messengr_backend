{
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "None",
    "esModuleInterop": true,
    "target": "ES2018",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "allowJs": true,
    "outDir": "build",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "prisma/**/*",
  ]
}
